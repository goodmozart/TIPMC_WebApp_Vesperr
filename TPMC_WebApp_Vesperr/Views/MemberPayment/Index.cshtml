@model IEnumerable<TPMC_WebApp_Vesperr.Models.TPMC.MemberPayment>

@{
    ViewData["Title"] = "Member Payment Update";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
@if(Model != null)
{
    <table class="table" id="grid">
        <thead>
            <tr>
                @*<th>
            @Html.DisplayNameFor(model => model.MemberId)
            </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.EmpNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Section)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePaid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Principal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>
            @Html.DisplayFor(modelItem => item.MemberId)
            </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePaid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Principal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    @* <td>
            <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
            </td>*@

                    @if (User.IsInRole("SuperAdmins") || User.IsInRole("Administrator"))
                    {
                        <td class=" no-wrap">
                            <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-warning">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-success">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-danger">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="display-4 text-center">No Data Found!!!</h3>
}






@section Scripts{
    <script>
        $(document).ready(function () {
            $('#grid').DataTable();
        });
    </script>
    <script>
        if (errorMessage) {
            alert(errorMessage);
        }
    </script>
}
